<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="pageBG" parent="CardView">
        <item name="android:background">@color/BGColor</item>
    </style>

    <style name="MyCalcButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/BGColor</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>

    <style name="MyButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/BGColor</item>
        <item name="android:radius">15dp</item>
    </style>

    <style name="DarkProfileText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircularFloatingActionButton" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Circular</item>
        <item name="tint">@color/white</item>
    </style>
</resources>