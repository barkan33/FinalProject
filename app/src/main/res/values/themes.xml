<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
        <!--        <item name="android:windowActivityTransitions">true</item>-->
        <!--        <item name="android:windowEnterTransition">@android:transition/slide_right</item>-->
        <!--        <item name="android:windowExitTransition">@android:transition/slide_left</item>-->
        <item name="backgroundColor">@color/primary</item>

    </style>

    <style name="pageBG" parent="CardView">
        <item name="android:background">@drawable/bg_gradient</item>
    </style>

    <style name="imageShape" parent="CardView">
        <!--        <item name="android:bottomRightRadius">@drawable/image_shape</item>-->
        <!--        <item name="android:radius">@drawable/image_shape</item>-->
        <item name="android:radius">15dp</item>
    </style>

    <style name="TextEdit" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryDark">#1565C0</item>
        <item name="colorAccent">#FF4081</item>
        <item name="windowActionModeOverlay">true</item>
        <!--        <item name="android:actionModeBackground">#546E7A</item>-->
        <item name="android:dialogTheme">@style/Dialog.Theme</item>
    </style>

    <style name="EditText.Flat.Grey" parent="BaseTheme">
        <item name="android:textColorHint">#999999</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="EditText.Grey" parent="BaseTheme">
        <item name="colorControlActivated">#666666</item>
        <item name="colorControlHighlight">#666666</item>
        <item name="colorControlNormal">#999999</item>
    </style>
</resources>